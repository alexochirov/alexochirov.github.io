        .grid-container
            .grid-x.grid-padding-x: .cell
                h1 Cetera Labs Wireframes
            .content
                .grid-x.grid-padding-x: .cell
                    ul.tabs#product-tabs-1(data-tabs, data-deep-link='true')
                    
                        li.tabs-title.is-active
                            a(href='#shop') Магазин

                    .tabs-content(data-tabs-content="product-tabs-1")
