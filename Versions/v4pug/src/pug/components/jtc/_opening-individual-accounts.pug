            | индивидуального счета
            
        form.account-opening_form(action='' method='')
          .row 
            .column.medium-6
              .account-opening_form-logo
                each name in ['payment-mastercard', 'payment-swift', 'payment-paysafecard', 'payment-neteller', 'payment-cashu', 'payment-skrill']
                  img.account-opening_form-logo-img(src='images/' + name + '-small.svg')
              //- .tabs.column
              .tabs.tabs_mb
                input#account-opening_real(type='radio', name='tabs')
                label#account-opening_btn-real(for='account-opening_real', title='Real') CySEC
                input#account-opening_demo(type='radio', name='tabs', checked='')
                label#account-opening_btn-demo(for='account-opening_demo', title='Demo') FSA of Seychelles
          
                #content-tab1.content-tab
                  .account-opening_row
                    label
                        input.account-opening_input(type='text', placeholder='Фамилия*' required)
                    label
                        input.account-opening_input(type='text', placeholder='Имя*' required)
                    label
                        input.account-opening_input(type='email', placeholder='Email*' required)
                    label
                        input.account-opening_input(type='email', placeholder='Подтвердите Email*' required)
                    label
                        input.account-opening_input(type='tel', placeholder='+7 (---) --- -- -- *' maxlength="30")
                    label.account-opening_label
                        input.account-opening_input.account-opening_input-sms(type='text', placeholder='Смс код*' required)
                        button.account-opening_get-sms(type='button', disabled,  data-action-url='', data-sms-reason='QuestionnaireConfirmPhone', data-default-error-text='При отправке sms-кода произошла ошибка.' )
                            span.confirmbysms__sendedtext(style='display: none;')
                                i.fa.fa-check
                                |  Отправлено
                            span.confirmbysms__notsendedtext(style='display: none;')
                                i.glyphicon.glyphicon-remove
                                |  Ошибка
                            span.confirmbysms__sendingtext(style='display: none;')
                                img(style='margin-right: 5px;', src='/content/i/302smblue.gif')
                                | Отправляется
                            span.confirmbysms__sendtext
                                i.fa.fa-edit
                                |  Получить смс-код
          
