extends shop-regular

block content
  .row.column
    h1 Персональный раздел
  .content
    .row
      .column.small-24.medium-8.large-6
        p.show-for-small-only(data-responsive-toggle='menu-left', data-hide-for='medium'): span.button.light-gray.expanded(data-toggle)
          i.fa.fa-lg.fa-bars
          | &nbsp;Навигация
        .callout#menu-left
          ul.menu.vertical
            li: a(href='shop-user-personal.html' title='') Регистрационные данные
            li.active: a(href='shop-user-edit.html' title='') Изменить данные о себе
            li: a(href='shop-cart.html' title='') Корзина
            li: a(href='shop-orders.html' title='') Список заказов
            li: a(href='shop-wishlist.html' title='') Любимые товары
            li: a(href='shop-user-personal.html' title='') Изменить подписку

      .column.small-24.medium-16.large-18
        block personal
          .callout.text-center
            p.lead
              = 'Ваш '
              a(href='#' title='') заказ №123 от 30.06.2016
              = ' подтверждён'

            a.button(href='#' title='') Оплатить заказ

          h2 Регистрационные данные
          p
            strong Электронная почта:&nbsp;
            | user@email.com
          p
            strong Логин:&nbsp;
            | user
          p
            strong Имя:&nbsp;
            | user
          p
            strong Фамилия:&nbsp;
            | user

          hr
          br

          h2 Получать на электронную почту
          form
            label
              input(type='checkbox' checked required disabled)
              span Информацию о заказах
            label
              input(type='checkbox')
              span Сообщения о наших акциях
            label
              input(type='checkbox')
              span Сообщения про обновления ассортимента
            p.show-for-small-only
            button.button Сохранить
