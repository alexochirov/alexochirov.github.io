mixin person(name, position)
    .cell
        a(href='person.html')
            .card(data-equalizer-watch='people')
                .card-image
                    img(src='http://via.placeholder.com/300x400' alt='Фото сотрудника' style='width: 100%;')
                .card-section
                    b= name
                    br
                    = position