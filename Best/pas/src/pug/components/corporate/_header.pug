
header.header
  .header__top
    .grid-container.header__rel
      .grid-x.grid-padding-x.align-middle
        .cell.large-auto.medium-12.small-19
          a(href="#").header__logo
            img(src="./images/logo.svg", alt="")
        .cell.medium-12.hide-for-large.text-right.small-5
          .header__toggle(data-toggle="soc journal search net develop about")
            i.fas.fa-bars
        .cell.large-7
          h3.header__title Журнал о рознице и инновациях
        .cell.large-shrink#soc.show-for-large.large-text-right(data-toggler=".show-for-large").header__icons.medium-12.text-center.medium-text-left
          a(href="#").header__soc
            i.fab.fa-facebook-f(data-fa-transform='shrink-6 ', data-fa-mask='fas fa-circle', )
          a(href="#").header__soc
            i.fab.fa-twitter(data-fa-transform='shrink-8 ', data-fa-mask='fas fa-circle', )
          a(href="#").header__soc
            i.fab.fa-telegram-plane(data-fa-transform='shrink-6 ', data-fa-mask='fas fa-circle', )
          a(href="#").header__soc
            i.fas.fa-rss(data-fa-transform='shrink-9 ', data-fa-mask='fas fa-circle', )
        .cell.large-5#search.show-for-large(data-toggler=".show-for-large").medium-12
          form.search-top.input-group(action='shop-search.html' method='get')
              input.search-top__input.input-group-field(type='text', value='')
              .input-group-button
                  button.search-top__button(type='submit'): i.fas.fa-search
    
  .header__marquee
    ul.develop#develop.show-for-large(data-toggler=".show-for-large")
