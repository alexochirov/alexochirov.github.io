extends shop-regular
include components/mixins/_mixin-block-title

block content
  .grid-container.text-center
    h1 Серия мебели для кабинета руководителя «Advantage»
  .section
    .grid-container: .grid-x.grid-padding-x
      .small-24.medium-12.cell.medium-order-2#example
        include components/common/_site-info


      .small-24.medium-12.cell.medium-order-1
        include components/shop/_product-images
  .grid-container: hr.margin-bottom-6
  .section
    .grid-container
      ul.tabs#product-tabs-1(data-responsive-accordion-tabs="accordion medium-tabs" data-deep-link="true" data-update-history="false")
        li.tabs-title.is-active
          a(href='#product-tab-description' title='') Описание
        li.tabs-title
          a(href='#product-tab-spec' title='') Характеристики товара
        li.tabs-title
          a(href='#product-tab-files' title='') Дополнительные материалы
        li.tabs-title
          a(href='#product-tab-comments' title='')
            i.fa.fa-lg.fa-comments
            | &nbsp;Отзывы&nbsp;(10)

      .tabs-content(data-tabs-content="product-tabs-1")
        .tabs-panel.is-active#product-tab-description
          include components/shop/_product-tab-description
        .tabs-panel#product-tab-spec
          include components/shop/_product-tab-spec
        .tabs-panel#product-tab-files
          include components/shop/_product-tab-files
        .tabs-panel#product-tab-comments
          include components/shop/_product-tab-comments
  .grid-container
    hr.margin-bottom-6
  .section
    .grid-container
      ul#product-tabs-2.tabs(data-responsive-accordion-tabs='accordion medium-tabs', data-deep-link='true', data-update-history='false')
        li.tabs-title.is-active
          a(href='#product-tab-consumables-original', title='') Прочее
        li.tabs-title
          a(href='#product-tab-accessories', title='') Шкафы, стеллажи и гардеробы
        li.tabs-title
          a(href='#product-tab-accessories', title='') Ресепшн
        li.tabs-title
          a(href='#product-tab-accessories', title='') Надставки на стол
        li.tabs-title
          a(href='#product-tab-accessories', title='') Полки настенные
        li.tabs-title
          a(href='#product-tab-accessories', title='') Столы офисные
        li.tabs-title
          a(href='#product-tab-accessories', title='') Подставки под системный блок
        li.tabs-title
          a(href='#product-tab-accessories', title='')  Тумбы офисные
        li.tabs-title
          a(href='#product-tab-accessories', title='') Экраны и перегородки



      .tabs-content(data-tabs-content="product-tabs-2")
        .tabs-panel.is-active#product-tab-consumables-original
          include components/shop/_product-tab-tables
        .tabs-panel#product-tab-accessories
          include components/shop/_product-tab-boxes
  .grid-container
    hr
