extends shop-regular

block content
  .grid-container.text-center
    h1 Персональный раздел
  .section
    .grid-container: .grid-x.grid-padding-x
      .cell.small-24.medium-8.large-6
        .margin-bottom-6.show-for-small-only(data-responsive-toggle='menu-left', data-hide-for='medium'): span.button.expanded(data-toggle)
          i.fa.fa-lg.fa-bars
          | &nbsp;Навигация
        .callout.aside-menu.white-box#menu-left
          ul.menu.vertical.aside-menu__list
            li: a.menu__link.menu__link_green(href='shop-user-personal.html' title='') Регистрационные данные
            li.active: a.menu__link.menu__link_green(href='shop-user-edit.html' title='') Изменить данные о себе
            li: a.menu__link.menu__link_green(href='shop-cart.html' title='') Корзина
            li: a.menu__link.menu__link_green(href='shop-orders.html' title='') Список заказов
            li: a.menu__link.menu__link_green(href='shop-wishlist.html' title='') Любимые товары
            li: a.menu__link.menu__link_green(href='shop-user-personal.html' title='') Изменить подписку

      .cell.small-24.medium-16.large-18
        block personal
          .user-info
            fieldset.fieldset.user-info__fieldset
              .margin-bottom-4.lead.text-black
                = 'Ваш '
                a.text-underline(href='#' title='') заказ №123 от 30.06.2016
                = ' подтверждён'

              a.button(href='#' title='') Оплатить заказ

            fieldset.fieldset.user-info__fieldset
             legend Персональные данные
             ul.user-info__list
              li
                h4 Электронная почта:&nbsp;
                | user@email.com
              li
                h4 Логин:&nbsp;
                | user
              li
                h4 Имя:&nbsp;
                | user
              li
                h4 Фамилия:&nbsp;
                | user



            fieldset.fieldset.user-info__fieldset
              legend Получать на электронную почту
              form
                label.margin-bottom-3
                  input(type='checkbox' checked required disabled).margin-bottom-1
                  | Информацию о заказах
                label.margin-bottom-3
                  input(type='checkbox').margin-bottom-1
                  | Сообщения о наших акциях
                label.margin-bottom-6
                  input(type='checkbox').margin-bottom-1
                  | Сообщения про обновления ассортимента
                button.button.margin-0 Сохранить
