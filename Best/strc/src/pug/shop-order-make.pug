extends shop-regular

block content
  .grid-container.text-center
    h1 Оформление заказа
  .section
    .grid-container: .grid-x.grid-padding-x
      .cell.small-24.medium-16.large-18#order-container
        .user-info
          fieldset.fieldset.user-info__fieldset
            legend Товары в заказе
            .grid-x.grid-padding-x
              .cell.small-6.medium-4.large-2.margin-bottom-6
                img(src="./i/ta"  + Math.ceil(Math.random() * 4) + '.jpg' alt='товар')
              .cell.small-18.medium-10.large-12
                h6: a(href='shop-product.html') Кресло руководителя «Advantage»
                  .text-size-small.text-medium-gray арт. 123456
              .cell.small-24.medium-10.large-10
                .grid-x.grid-padding-x
                  .cell.small-12.medium-24.large-8
                    .margin-bottom-6
                      strong
                        | 25 280&nbsp;
                        i.fa.fa-rub
                      br
                      del.text-dark-gray
                        | 27 150 &nbsp;
                        i.fa.fa-rub
                  .cell.small-12.medium-24.large-6 1 шт
                  .cell.small-24.large-10
                    .margin-bottom-6
                      span.text-size-xxlarge
                        | 25 280&nbsp;
                        i.fa.fa-rub
            hr.margin-bottom-6
            .grid-x.grid-padding-x
              .cell.small-6.medium-4.large-2.margin-bottom-6
                img(src="./i/ta"  + Math.ceil(Math.random() * 4) + '.jpg' alt='товар')
              .cell.small-18.medium-10.large-12
                h6: a(href='shop-product.html') Стол офисный
                  .text-size-small.text-medium-gray арт. 123456
              .cell.small-24.medium-10.large-10
                .grid-x.grid-padding-x
                  .cell.small-12.medium-24.large-8
                    .margin-bottom-6
                      strong
                        | 25 280&nbsp;
                        i.fa.fa-rub
                      br
                      del.text-dark-gray
                        | 27 150 &nbsp;
                        i.fa.fa-rub
                  .cell.small-12.medium-24.large-6 1 шт
                  .cell.small-24.large-10
                    div
                      span.text-size-xxlarge
                        | 25 280&nbsp;
                        i.fa.fa-rub
        fieldset.fieldset.user-info__fieldset
          legend Информация об оплате
          fieldset.padding-top-4.margin-bottom-6
            legend: strong.text-black Тип плательщика
            .display-inline-block
              input#type1(type='radio' name='type')
              label(for='type1') Физическое лицо
            .display-inline-block
              input#type2(type='radio' name='type')
              label(for='type2') Юридическое лицо
          label
            strong
              span.text-viol *&nbsp;
              | Местоположение
            input(type='text')
          p.help-text Выберите свой город в списке. Если вы не нашли свой город, выберите "другое местоположение", а город впишите в поле "Город"
          label
            strong
              span.text-viol *&nbsp;
              | Индекс
            input(type='text')
        fieldset.fieldset.user-info__fieldset
          legend Доставка
          .grid-x.grid-padding-x.small-up-1.medium-up-2.large-up-4(data-equalizer data-equalize-by-row="true")
            .cell
              label.callout(data-equalizer-watch).light-gray
                input(type='radio' name='delivery')
                i.fa.fa-lg.fa-automobile.text-dark-gray
                = ' '
                span.label.violet
                  | 0
                  = ' '
                  i.fa.fa-rub
                br
                | Самовывоз
            .cell
              label.callout(data-equalizer-watch).light-gray
                input(type='radio' name='delivery')
                i.fa.fa-lg.fa-truck.text-dark-gray
                = ' '
                span.label.violet
                  | 500
                  = ' '
                  i.fa.fa-rub
                br
                | Доставка курьером
          hr.margin-bottom-6
          .grid-x.grid-padding-x
            .cell.small-24.medium-24.large-13
              .input-group
                input.input-group-field(type='text' placeholder='Применить купон')
                .input-group-button
                  button.button(type='button')
                    i.fa.fa-calculator
                    = ' '
                    | Пересчитать
        fieldset.fieldset.user-info__fieldset
          legend Оплата
          .grid-x.grid-padding-x.small-up-1.medium-up-2.large-up-4(data-equalizer data-equalize-by-row="true")
            .cell
              label.callout(data-equalizer-watch).light-gray
                input(type='radio' name='payment')
                i.fa.fa-lg.fa-money
                br
                | Наличными
            .cell
              label.callout(data-equalizer-watch).light-gray
                input(type='radio' name='payment')
                img(src='./images/shop/visa.svg' alt='иконка' style='width:40px;height:25px;')
                br
                | Банковские карты
            .cell
              label.callout(data-equalizer-watch).light-gray
                input(type='radio' name='payment')
                img(src='./images/sber.svg' alt='иконка' style='height:25px;')
                br
                | Квитанция Сбербанка
            .cell
              label.callout(data-equalizer-watch).light-gray
                input(type='radio' name='payment')
                i.fa.fa-lg.fa-terminal
                br
                | Терминалы
            .cell
              label.callout(data-equalizer-watch).light-gray
                input(type='radio' name='payment')
                img(src='./images/shop/ym.svg' alt='иконка' style='width:40px;height:25px;')
                br
                | Яндекс.Деньги
            .cell
              label.callout(data-equalizer-watch).light-gray
                input(type='radio' name='payment')
                i.fa.fa-university.fa-lg
                br
                | Наложенный платеж
        fieldset.fieldset.user-info__fieldset
          legend Покупатель
          label
            strong
              span.text-primary *&nbsp;
              | ФИО
            input(type='text')
          label
            strong
              span.text-primary *&nbsp;
              | E-Mail
            input(type='text')
          label
            strong
              span.text-primary *&nbsp;
              | Телефон
            input(type='text')
          label
            strong
              span.text-primary *&nbsp;
              | Адрес доставки
            input(type='text')
          label
            strong
              span.text-primary *&nbsp;
              | Комментарий к заказу
            textarea
      .cell.small-24.medium-8.large-6.margin-bottom-6
        div(data-sticky-container)
          .sticky.callout(data-sticky data-anchor="order-container" data-sticky-on="medium" data-margin-top="12" ).width-100
            .grid-x.grid-padding-x
              .cell.small-10.medium-24.large-10.text-left.medium-text-center.large-text-left: strong Товаров на
              .cell.small-14.large-text-right.medium-24.large-14.text-right.medium-text-center: strong
                | 500
                = ' '
                i.fa.fa-rub
          
            hr.margin-bottom-6
            .grid-x.grid-padding-x
              .cell.small-10.medium-24.large-10.text-left.medium-text-center.large-text-left НДС
              .cell.small-14.large-text-right.medium-24.large-14.text-right.medium-text-center
                | 90
                = ' '
                i.fa.fa-rub
              .cell.small-24.text-left.medium-text-center.large-text-left: small: em 18%, включен в цену
      
            hr.margin-bottom-6
            .grid-x.grid-padding-x
              .cell.small-10.medium-24.large-10.text-left.medium-text-center.large-text-left Доставка
              .cell.small-14.large-text-right.medium-24.large-14.text-right.medium-text-center
                | 500
                = ' '
                i.fa.fa-rub
    
            hr.margin-bottom-6
            .grid-x.grid-padding-x
              .cell.small-10.medium-24.large-10.text-left.medium-text-center.large-text-left: strong Итого
              .cell.small-14.large-text-right.medium-24.large-14.text-right.medium-text-center.text-size-xxlarge
                | 1000
                = ' '
                i.fa.fa-rub
      .cell.small-24.medium-16.large-18
        a.button(href='shop-order-confirmation.html')
          i.fa.fa-credit-card
          = ' '
          | Оформить заказ
