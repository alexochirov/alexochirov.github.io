extends shop-regular
include components/mixins/_mixin-block-title
block content
  .grid-container
    h1.text-center: strong Мебель для переговорной комнаты
  .section
    .grid-container.fluid: .grid-x.grid-padding-x
      .cell.small-24.medium-8.large-6.s-container(data-sticky-container)
        .sticky(data-sticky,data-top-anchor="primaryContent:top",data-btm-anchor="primaryContent:bottom", data-margin-top="8")
          include components/shop/_sidebar-sale
      .cell.small-24.medium-16.large-18#primaryContent
        .grid-x.grid-padding-x
          .cell.auto.medium-shrink
            button.button.hollow.secondary.expanded.dropdown.margin-bottom-6(data-toggle='sort-dropdown' data-position="bottom" data-alignment="left") По популярности
            #sort-dropdown.dropdown-pane(data-dropdown)
              ul.menu.vertical
                li: a(href='') Сначала новинки
                li: a(href='') Сначала дешёвые
                li: a(href='') Сначала дорогие
                li.active: a(href='') По размеру скидки
                li: a(href='') По популярности
          .cell.show-for-medium.auto
          .cell.shrink
            a.button.light-gray.expanded(href='shop-compare.html')
              i.fa.fa-lg.fa-balance-scale.hide-for-medium-only
              span.hide-for-small-only &nbsp;Сравнить:
              | &nbsp;5


