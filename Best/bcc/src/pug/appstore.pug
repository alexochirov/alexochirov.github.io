extends index
block top
  .world
    .world__header
      include components/common/_header
    .platform(style="background-image:url(./i/bg_abstract.jpg);")
      .row.columns.hide-for-small-only
        .platform__title 
          | Онлайн магазин
          br
          | от 
          strong Bento Cloud —
          br
          | ваши новые
          br
          | возможности
block content
  .cloud.cloud_mix
    .row
      .medium-12.large-10.columns
        .benefit
          .row
            .small-4.columns.benefit__img
              img(src="./images/browser.svg", alt="")
            .small-20.columns.benefit__text Он-лайн магазин с Вашим логотипом 
        .benefit
          .row
            .small-4.columns.benefit__img
              img(src="./images/goals.svg", alt="")
            .small-20.columns.benefit__text Самостоятельная настройка тарифных планов и цен 
        .benefit
          .row
            .small-4.columns.benefit__img
              img(src="./images/parirus.svg", alt="")
            .small-20.columns.benefit__text Самостоятельное формирование документооборота в соответствии с Российским законодательством
        .benefit
          .row
            .small-4.columns.benefit__img
              img(src="./images/megaphone.svg", alt="")
            .small-20.columns.benefit__text Настройка Ваших маркетинговых промо акций
        .benefit
          .row
            .small-4.columns.benefit__img
              img(src="./images/documents.svg", alt="")
            .small-20.columns.benefit__text Представление Ваших собственных сервисов и решений 
        .benefit
          .row
            .small-4.columns.benefit__img
              img(src="./images/knowledge.svg", alt="")
            .small-20.columns.benefit__text Ваша техническая поддержка и обучение 
        .benefit
          .row
            .small-4.columns.benefit__img
              img(src="./images/icn-gear.svg", alt="")
            .small-20.columns.benefit__text Настраиваемая Контрольная панель 
        .benefit
          .row
            .small-4.columns.benefit__img
              img(src="./images/icn-rocket.svg", alt="")
            .small-20.columns.benefit__text Ваше конкурентное преимущество 
        .benefit
          .row
            .small-4.columns.benefit__img
              img(src="./images/funnel.svg", alt="")
            .small-20.columns.benefit__text Создание новых возможностей для продаж 
        .benefit
          .row
            .small-4.columns.benefit__img
              img(src="./images/icn-bars.svg", alt="")
            .small-20.columns.benefit__text Ваша инвестиционная привлекательность 
      .medium-12.columns
        form(action="#").reg
          .reg__error
            div Введите название компании
            div Введите название сайта
            div Введите номер телефона
            div Введите корректный адрес e-mail
          input(type="text",placeholder="Название компании").reg__input
          input(type="text",placeholder="Сайт").reg__input
          input(type="tel",placeholder="Телефон").reg__input
          input(type="email",placeholder="Корпоративный e-mail").reg__input
          input(type="text",placeholder="ФИО контактного лица").reg__input
          input(type="text",placeholder="Должность").reg__input
          input(type="text",placeholder="Город").reg__input
          .mb70
          button(type="submit").reg__submit Зарегистрироваться
