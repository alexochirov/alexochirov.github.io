              li.categories__item.open
                a(href="#").categories__link= title
                span.categories__count (#{Math.floor(Math.random() * (15 - 800) + 800)})
                ul.categories
                  each title,index in ['Аксессуары для парикмахерских работ','Одноразовая продукция','Полотенца']
                    if index==0
                      li.categories__item.active
                        a(href="#").categories__link= title
                        span.categories__count (#{Math.floor(Math.random() * (15 - 800) + 800)})
                    else
                      li.categories__item
                        a(href="#").categories__link= title
                        span.categories__count (#{Math.floor(Math.random() * (15 - 800) + 800)})
            else
              li.categories__item
                a(href="#").categories__link= title
                span.categories__count (#{Math.floor(Math.random() * (15 - 800) + 800)})

        h4 Производители
