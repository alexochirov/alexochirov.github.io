extends shop-regular

block content
  
  .content
    .row
      .column.small-12.medium-4.large-3
        p.show-for-small-only(data-responsive-toggle='menu-left', data-hide-for='medium'): span.button.expanded(data-toggle)
          i.fa.fa-lg.fa-bars
          | &nbsp;Навигация
        #menu-left
          ul.solvent
            li.solvent__item: a.solvent__link(href='shop-user-personal.html' title='') Регистрационные данные
            li.solvent__item.active: a.solvent__link(href='shop-user-edit.html' title='') Изменить данные о себе
            li.solvent__item: a.solvent__link(href='shop-cart.html' title='') Корзина
            li.solvent__item: a.solvent__link(href='shop-orders.html' title='') Список заказов
            li.solvent__item: a.solvent__link(href='shop-wishlist.html' title='') Любимые товары
            li.solvent__item: a.solvent__link(href='shop-user-personal.html#subscription-settings' title='') Изменить подписку

      .column.small-12.medium-8.large-9
        block personal
          h1.text-center Персональный раздел
          .callout.text-center
            p.lead
              = 'Ваш '
              a(href='#' title='') заказ №123 от 30.06.2016
              = ' подтверждён'

            a.button(href='#' title='') Оплатить заказ

          h2 № скидочной карты
          p 0000000002509
          p Ваша скидка #[b 5%]

          h2 Регистрационные данные
          p
            span.text-dark-gray Электронная почта:&nbsp;
            | user@email.com
          p
            span.text-dark-gray Логин:&nbsp;
            | user
          p
            span.text-dark-gray Имя:&nbsp;
            | user
          p
            span.text-dark-gray Фамилия:&nbsp;
            | user

          hr
          br

          section#subscription-settings
            h2 Получать на электронную почту
            form
              label
                input(type='checkbox' checked required disabled)
                | Информацию о заказах
              label
                input(type='checkbox')
                | Сообщения о наших акциях
              label
                input(type='checkbox')
                | Сообщения про обновления ассортимента
              button.button Сохранить
