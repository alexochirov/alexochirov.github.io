mixin productLine(discount, onDemand, inCart, inFavourites)
  .row
    .column.small-4.medium-2.large-1.text-center
      p
        a(data-open="product-quickview" title='Быстрый просмотр').comparator
          img(src='./i/pro'  + Math.floor(Math.random() * (6 - 11) + 6) + '.png' alt='Товар')
    .column.small-8.medium-6.large-6
      h5
        if discount
          span.label.success
            i.fa.fa-star-o
            | &nbsp;Акция
          | &nbsp;
        a.text-warning(href='shop-product.html') Mobihel аэрозоль 202 Снежно-белый
        br


    .column.small-12.medium-4.large-offset-1
      if onDemand
        p
          span.text-dark-gray: em Нет в наличии&nbsp;
          br
          a(href='#' title=''): strong Заказать
      else
        .row.collapse
          .small-7.medium-12.large-7.columns
            p
              span.stat
                | 1&nbsp;250&nbsp;
                i.fa.fa-rub
              if discount
                br
                del.text-dark-gray
                  | 1&nbsp;750&nbsp;
                  i.fa.fa-rub
          .small-5.medium-12.large-5.columns
            if inCart
              a(href='shop-cart.html' title='Перейти в корзину')
                span.dark-gray
                  i.fa.fa-check.fa-lg
                  | &nbsp;В корзине: 1
            else
              a(href='shop-cart.html' title='').button.hollow.expanded Купить
