extends shop-regular

block content

      
  .content
  
    .row
      .columns.small-12.medium-4.large-3
        a.button.expanded(href='shop-compare.html').mt13
          i.fa.fa-lg.fa-balance-scale
          | &nbsp;Сравнить: 5
        include components/shop/_menu-catalog
      .columns.small-12.medium-8.large-9
        h1.text-center Бренды
        block products
          .row.small-up-1.medium-up-2.large-up-4.text-center
            -var n = 0
            while n < 20
              - n++
              .column.brand
                a(href='shop-brand.html' title='Смотреть товары бренда')
                  img(src='./i/v' + Math.floor(Math.random() * (6 - 11) + 6) + '.png' alt='Логотип бренда')

        p &nbsp;
        include components/common/_pagination

  +recentlyViewedItems

  +seoText
