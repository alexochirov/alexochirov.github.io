header.header
  .header__top
    .row
      .large-12.columns.medium-16.text-center.medium-text-left
        ul.shop
          each title,index in ['О магазине','Оплата','Доставка','Контакты']
            li.shop__item(class=index==0 ? "active":"")
              a(href="#1").shop__link= title
      .large-4.columns.header__rel.medium-8.text-right
        form(action="#")
          input(type="text",placeholder="").header__input
          button(type="submit").header__submit
            i.fa.fa-search.fa-lg
      .large-8.columns.large-text-right.header__info.text-center
        a(href="+88000000000").header__link
          i.fa.fa-mobile.fa-lg
          | 8 (800) 000 0000
        a(href="#").header__link
          i.fa.fa-shopping-bag
          | Корзина: (
          =" "
          strong 0
          =" "
          | )
        a(href="#").header__link
          i.fa.fa-sign-in
          | Войти
  .row
    .medium-12.small-16.columns.header__logo
      a(href="#")
        img(src="./images/logo.svg", alt="")
    .medium-12.small-8.columns.text-right.header__el
      button(data-toggle="example-dropdown").header__toggle
        img(src="./images/menu.svg", alt="")
      .dropdown-pane#example-dropdown.man(data-dropdown,data-auto-focus="true")
        a(href="#",data-toggle="menuBar").man__header
          i.fa.fa-caret-down
          | Каталог товаров
        ul.wear(data-toggler=".hide")#menuBar
          each title in ['Мужская одежда','Женская одежда','Универсальная ']
            li.wear__item
              a(href="#").wear__link= title
        hr.man__hr
        a(href="#").man__header Новости
        a(href="#").man__header О нас
