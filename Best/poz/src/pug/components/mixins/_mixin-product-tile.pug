mixin productTile(title, discount,img)
  .column
    .clearfix(data-equalizer-watch)
      p
        a(href='shop-product.html'): img(src='./i/'+img alt='товар' style='background:#e6e6e6;')
        span.button-group.primary.expanded
          a(title='Запомнить' data-open="add-to-favourites-auth-popup").button.small
            i.fa.fa-heart-o
          a(title='Быстрый просмотр' data-open="product-quickview").button.small
            i.fa.fa-eye
          a(title="Добавить к сравнению" href='shop-compare.html').button.small
            i.fa.fa-balance-scale
      p
        if discount
          span.label.success
            i.fa.fa-star-o
            | &nbsp;Акция
          | &nbsp;
        a(href='shop-product.html')
          if title
            = title
          else
            | Название товара

    .row.collapse
      .small-14.columns
        strong
          | 1&nbsp;250&nbsp;
          i.fa.fa-rub
        if discount
          br
          del.text-dark-gray
            | 1&nbsp;750&nbsp;
            i.fa.fa-rub
      .small-10.columns
        a(href='shop-cart.html').button.small.primary.hollow.expanded Купить
