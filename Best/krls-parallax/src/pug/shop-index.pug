                    .cell.clock.large-10
                      .clock__wrap: img(src="./images/icon4.svg", alt="").clock__icon
                      .clock__title внутрь по 1/2 стакана
                      .clock__text за 30 минут до еды
                    .cell.clock.large-10
                      .clock__wrap: img(src="./images/icon5.svg", alt="").clock__icon
                      .clock__title 2-3 раза в день
                      .clock__text Курс лечения 20-30 дней
                #panel32.tabs-panel
                  .show-for-large.parallax-img(style="left:2vw;top:22rem;"): img(src="./i/im29.png", alt="")
                  .grid-x.grid-padding-x.align-justify
                    .cell.clock.large-10
                      .clock__wrap: img(src="./images/sp1.svg", alt="").clock__icon
                      .clock__title 1 столовая ложка
                      .clock__text около 6 г помещают в эмалированную посуду
                    .cell.clock.large-10
                      .clock__wrap: img(src="./images/sp2.svg", alt="").clock__icon
                      .clock__title залить 200 мл
                      .clock__text охлажденной кипяченой воды и закрыть крышкой
                    .cell.clock.large-10
                      .clock__wrap: img(src="./images/sp3.svg", alt="").clock__icon
                      .clock__title нагревать 15 минут
                      .clock__text на кипящей водяной бане
                    .cell.clock.large-10
                      .clock__wrap: img(src="./images/sp4.svg", alt="").clock__icon
                      .clock__title охладить 45 минут
                      .clock__text при комнатной температуре. Объем настоя довести кипяченой водой до 200 мл
                  
