        .grid-container.cloud__main
          .parallax-img.parallax-img_animate(style="right:4vw;top:12rem;"): img(src="./i/im27.png", alt="")
          h2 Способ применения
          .grid-x.grid-padding-x
            .large-6.cell.rel
              
              ul#example-tabs3.tabs.vertical(data-tabs='')
                li.tabs-title.is-active
                  a(data-tabs-target='panel31',href='#panel31') Фильтр-пакеты
                li.tabs-title
                  a(data-tabs-target='panel32', href='#panel32') Насыпная пачка

            .large-18.cell
              .tabs-content(data-tabs-content='example-tabs3')
                #panel31.tabs-panel.is-active
                  .show-for-large.parallax-img.parallax-img_animate(style="left:6vw;top:10rem;"): img(src="./i/im28.png", alt="")
                  .grid-x.grid-padding-x.align-justify
                    .cell.clock.large-10
                      .clock__wrap: img(src="./images/tea-bag.svg", alt="").clock__icon
